---
// File: Button.astro
// Description: Button component for Little Bead Studio website.
// Author: Daniel Boyle
// Created: 2024-06-10

const {
  href = null,
  variant = "primary",
  size = "md",
  class: extraClasses = "",
} = Astro.props;

const classes = `
  btn
  btn-${variant}
  btn-${size}
  ${extraClasses}
`;
---

{
  href ? (
    <a href={href} class={classes}>
      <slot />
    </a>
  ) : (
    <button class={classes}>
      <slot />
    </button>
  )
}

<style>
  .btn {
    display: inline-block;
    border: none;
    cursor: pointer;
    font-weight: 600;
    text-align: center;
    border-radius: 8px;
    transition:
      opacity 0.2s,
      transform 0.1s;
    text-decoration: none;
  }

  /* Sizes */
  .btn-sm {
    padding: 0.4rem 0.9rem;
    font-size: 0.85rem;
  }

  .btn-md {
    padding: 0.6rem 1.2rem;
    font-size: 1rem;
  }

  .btn-lg {
    padding: 0.8rem 1.6rem;
    font-size: 1.1rem;
  }

  /* Variants */
  .btn-primary {
    background: var(--brand-color);
    color: white;
  }

  .btn-outline {
    background: transparent;
    color: var(--brand-color);
    border: 2px solid var(--brand-color);
  }

  .btn-ghost {
    background: transparent;
    color: var(--text-color, #333);
  }

  /* Hover effects */
  .btn:hover {
    opacity: 0.85;
  }

  .btn:active {
    transform: scale(0.97);
  }
</style>
